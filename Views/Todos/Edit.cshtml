@{
}

@model TODOList.Models.Entities.Todo

<h1>Edit Todo</h1>

@if (Model is null)
{
    <p>No Todo with this Id</p>
}

else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Done" asp-for="IsCompleted" />
            <label class="form-check-label" for="Done">Done</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="Todos">Delete</button>
        </div>
    </form>
}

